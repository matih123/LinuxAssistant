<TitleBox@BoxLayout>:
        orientation: "horizontal"
        size_hint: (1, .07)

        BoxLayout:
                orientation: "horizontal"
                size_hint: (.45, 1)

                MDIconButton:
                        size_hint: (.33, 1)
                        icon: "refresh"
                        user_font_size: "35dp"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        on_press: app.show_websites()

                MDIconButton:
                        size_hint: (.33, 1)
                        icon: "view-dashboard"
                        user_font_size: "35dp"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        on_press: app.show_raspberry()

                MDIconButton:
                        size_hint: (.33, 1)
                        icon: "home"
                        user_font_size: "35dp"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        on_press: app.show_home()

        BoxLayout:
                size_hint: (.55, 1)

                MDLabel:
                        size: self.size
                        pos_hint: {"center_x": .5, "center_y": .5}
                        font_style: "H6"
                        halign: "center"
                        theme_text_color: "Primary"
                        text: "IP: %s"%(app.ip)

                        canvas.before:
                                Color:
                                        rgba: .28, .28, .28, 1
                                RoundedRectangle:
                                        radius: [10]
                                        size: self.size
                                        pos: self.pos

<MainLayout@BoxLayout>:
        orientation: "vertical"
        padding: '15dp', '15dp'

<NetworkLayout@BoxLayout>:
        orientation: "horizontal"
        size_hint: (1, .2)
        canvas.before:
                Color:
                        rgba: .28, .28, .28, 1
                RoundedRectangle:
                        radius: [10]
                        size: self.size
                        pos: self.pos

<GridLayout>:
        cols: 2
        size_hint: (1, .4)
        spacing: '15dp', '15dp'
        padding: '0dp', '12dp'

<InfoBox@BoxLayout>:
        size_hint: (1, .2)
        orientation: "vertical"

        canvas.before:
                Color:
                        rgba: .28, .28, .28, 1
                RoundedRectangle:
                        radius: [10]
                        size: self.size
                        pos: self.pos
        canvas:
                Color:
                        rgba: .81, .91, .98, 1     
                RoundedRectangle:
                        radius: [5]
                        size: (self.size[0], self.size[1]*.1)
                        pos: self.pos

<ProgressRectangle@BoxLayout>:
        size_hint: (1, 1)
        canvas:
                Color:
                        rgba: .09, .58, .98, 1
                RoundedRectangle:
                        radius: [5]
                        size: (self.size[0], self.size[1]*.31)
                        pos: self.pos

<InfoLabel@MDLabel>:
        font_style: "H6"
        halign: "center"
        theme_text_color: "Primary"
        size_hint: (1, .2)
